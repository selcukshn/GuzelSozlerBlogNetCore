@model IEnumerable<IdentityRole>
@{
    Layout = "_LayoutAdmin";
    ViewData["PageTitle"] = "Rol listesi";
}
<div class="col-12">
    <partial name="_alertV4">
        <div class="card">
            <div class="card-header">
                <a asp-controller="admin" asp-action="rolecreate" class="btn btn-primary">Ekle</a>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Rol</th>
                            <th colspan="2">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td style="width: 350px;">@role.Id</td>
                                <td>@role.Name</td>
                                <td style="width: 100px;">
                                    <a asp-controller="admin" asp-action="roleedit" asp-route-roleid="@role.Id"
                                    class="btn btn-warning w-100 btn-sm">DÃ¼zenle</a>
                                </td>
                                <td style="width: 100px;">
                                    <form asp-controller="admin" asp-action="roledelete" method="POST">
                                        <input name="Id" value="@role.Id" type="hidden">
                                        <button type="submit" class="btn btn-danger btn-sm w-100">Sil</button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>