@model CategoryEditCreateModel
@{
    Layout = "_LayoutAdmin";
}

<div class="col-12">
    <partial name="_alertV4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Kategori Ekle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="admin" asp-action="categorycreate" method="POST" class="form-horizontal"
                enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-10">
                            <div class="form-group row">
                                <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="CategoryName" class="form-control">
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CategoryImg" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="CategoryImg" type="file" class="w-100 bg-gray p-1">
                                    <span asp-validation-for="CategoryImg" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CategoryUrl" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="CategoryUrl" class="form-control" readonly>
                                    <span asp-validation-for="CategoryUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <h5>Anasayfada göster</h5>
                            <hr class="mb-2">
                            <div class="form-group pt-2">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="ShowHome" class="custom-control-input" type="checkbox">
                                    <label asp-for="ShowHome" class="custom-control-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="submitBtn" type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-controller="admin" asp-action="categorylist" class="btn btn-danger">İptal</a>
                </div>
            </form>
        </div>
</div>

@section Scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/urlconvert.js"></script>
}