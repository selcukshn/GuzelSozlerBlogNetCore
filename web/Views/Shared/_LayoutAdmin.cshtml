<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminPanel/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminPanel/dist/css/adminlte.min.css">
    <!-- Custom -->
    <link rel="stylesheet" href="~/AdminPanel/css/style.css">
    <!-- Data Table -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.11.5/datatables.min.css" />
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        @await Html.PartialAsync("Admin/_navbar.cshtml")
        @await Html.PartialAsync("Admin/_sidebar.cshtml")
        @* @await Component.InvokeAsync("Admin/Components/AdminSidebar") *@
        <div class="content-wrapper">

            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["PageTitle"]</h1>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </section>

        </div>

        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>


        @* @await Html.PartialAsync("Admin/_footer.cshtml") *@

    </div>

    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Data table -->
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.11.5/datatables.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminPanel/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminPanel/dist/js/adminlte.min.js"></script>
    @RenderSection("Scripts",false)
</body>

</html>
